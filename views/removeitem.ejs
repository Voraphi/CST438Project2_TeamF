<%- include ('templates/header'); -%>

<%- include ('templates/authnav'); -%>

<!-- Cart items -->

<div class="small-container cart-page">
    
    <table>
        <tr>
            <th>Product</th>
        </tr>
        
        <% var num = 0 %>
        
        <% results.forEach(function(r) { %>
        
            <tr>
                <td>
                    <div class="cart-info">
                        <img src='<%= r.itemlink %>'>
                        <div>
                            <p><%= r.itemName %></p>
                            <small>Price: $<%= r.price %></small>
                            <br>
                            
                            <form action='/removeitem' method='POST'>
                                <input type='number' class='form-control' name='itemId' value='<%= r.itemId %>' style="visibility: hidden;">
                                <button type="submit" class="btn-danger">Remove</button>

                            </form>
							<a class='btn btn-danger' href='/updateitem'>update Item</a>
                        </div>
                    </div>
                </td>
            </tr>
            
            <% num++ %>
        
        <% });%>
    </table>
    </form>
</div> 

<%- include ('templates/footer'); -%>