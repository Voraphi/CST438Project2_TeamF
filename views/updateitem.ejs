<%- include ('templates/header'); -%>


<div class='container'>
	<div class='jumbotron'>
		<h3> Update an Item to the Store </h3>
		<a class='btn btn-primary' href='/'>Home</a>
	</div>
	<% result.forEach(function(q) { %> 
	<form action='/updateitem' method='POST'>
					<div class='form-group row'>
			<label for='itemlink' class='col-sm-4 col-form-label'>Item link</label>
			<div class='col-sm-4'>
				<input type='text' class='form-control'  value='<%= q.itemlink %>' id='itemlink' name='itemlink' placeholder='itemlink' required>
			</div>
		</div>
		
			<div class='form-group row'>
			<label for='itemname' class='col-sm-4 col-form-label'>Item Name</label>
			<div class='col-sm-4'>
				<input type='text' class='form-control' value='<%= q.itemname %>' id='itemname' name='itemname' placeholder='itemname' required>
			</div>
		</div>
		
		<div class='form-group row'>
			<label for='color' class='col-sm-4 col-form-label'>Color</label>
			<div class='col-sm-4'>
				<input type='text' class='form-control' value='<%= q.color %>' id='color' name='color' placeholder='color' required>
			</div>
		</div>
		<div class='form-group row'>
			<label for='category' class='col-sm-4 col-form-label'>Category</label>
			<div class='col-sm-4'>
			<select class="form-control" name="category">
		        <option value="hat">Hat</option>
		        <option value="sweater">Sweater</option>
		        <option value="shirt">Shirt</option>
		        <option value="pants">Pants</option>
		        <option value="shoes">Shoes</option>
		    </select>
			</div>
		</div>
		<div class='form-group row'>
			<label for='unitsleft' class='col-sm-4 col-form-label'>Units left</label>
			<div class='col-sm-4'>
				<input type='number' class='form-control'  value='<%= q.unitsleft %>'id='unitsleft' name='unitsleft' placeholder='unitsleft' required>
			</div>
		</div>
		<div class='form-group row'>
			<label for='price' class='col-sm-4 col-form-label'>Price</label>
			<div class='col-sm-4'>
				<input type='number' class='form-control' value='<%= q.price %>' id='price' name='price' placeholder='price' required>
			</div>
		</div>
		<div class='form-group row'>
			<label for='description' class='col-sm-4 col-form-label'>Description</label>
			<div class='col-sm-4'>
				<input type='text' class='form-control' value='<%= q.description %>' id='description' name='desc' placeholder='description' required>
			</div>
		</div>
		<div class='form-group row'>
			<div class='col-sm-4'>
				<input type='text' class='form-control' value='<%= q.itemId %>' name='itemId' required style="visibility: hidden;">
			</div>
		</div>
		<div class='form-group row'>
			<div class='col-sm-4'></div>
			<div class='col-sm-4'>
				<button class='btn btn-info btn-block'>Update Item</button>
			</div>
			<div class='col-sm-4'></div>
		</div>
	</form>
	<% }); %>
</div>
